<Window x:Class="WpfAppSeaBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="370" Width="650" Loaded="Window_Loaded">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Grid x:Name="fieldGridLeft">
            </Grid>
            <Separator Width="10"></Separator>
            <Grid x:Name="fieldGridRight"></Grid>
            
        </StackPanel>
        <Button Name="button" Click="button_Click">Change</Button>
        <Button Name="playButton" Click="button_Click">Play</Button>
    </StackPanel>
</Window>
